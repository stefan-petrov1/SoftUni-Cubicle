<h1>Delete Cube</h1>
<div class="form">
    {{#with cube}}
      <form action="/cubes/delete/{{_id}}" method="POST">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" value={{name}} disabled="true">
          <label for="description">Description</label>
          <textarea id="description" name="description" disabled="true">{{description}}</textarea>
          <label for="image">ImageUrl</label>
          <input type="text" id="image" name="imageUrl" value={{imageUrl}} disabled="true">
          <label for="difficulty">Difficulty</label>
          <select id="difficulty" name="difficultyLevel" disabled="true"/>
            <option {{#ifCond difficultyLevel '==' 1}} selected {{/ifCond}} value="1">1 - Very Easy</option>
            <option {{#ifCond difficultyLevel '==' 2}} selected {{/ifCond}} value="2">2 - Easy</option>
            <option {{#ifCond difficultyLevel '==' 3}} selected {{/ifCond}} value="3">3 - Medium (Standard 3x3)</option>
            <option {{#ifCond difficultyLevel '==' 4}} selected {{/ifCond}} value="4">4 - Intermediate</option>
            <option {{#ifCond difficultyLevel '==' 5}} selected {{/ifCond}} value="5">5 - Expert</option>
            <option {{#ifCond difficultyLevel '==' 6}} selected {{/ifCond}} value="6">6 - Hardcore</option>
          </select>
        <input type="submit" value="Delete">
      </form>
    {{/with}}
</div>